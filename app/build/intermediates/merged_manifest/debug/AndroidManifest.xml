<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gigamole.quatrogradesample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <application
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.QuatroGrade" >
        <activity
            android:name="com.gigamole.quatrogradesample.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gigamole.quatrogradesample.DefaultExampleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gigamole.quatrogradesample.CustomExampleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gigamole.quatrogradesample.AnimationExampleActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>