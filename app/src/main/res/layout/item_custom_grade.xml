<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_custom_grade_button_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_custom_grade_text_view_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Position:"
        app:layout_constraintBottom_toTopOf="@id/item_custom_grade_seek_bar_position"
        app:layout_constraintEnd_toEndOf="@+id/item_custom_grade_seek_bar_position"
        app:layout_constraintStart_toStartOf="@+id/item_custom_grade_seek_bar_position"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/item_custom_grade_seek_bar_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Color"
        android:min="0"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_custom_grade_button_remove"
        app:layout_constraintStart_toEndOf="@+id/item_custom_grade_button_color"
        app:layout_constraintTop_toBottomOf="@id/item_custom_grade_text_view_position" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_custom_grade_button_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:padding="8dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
